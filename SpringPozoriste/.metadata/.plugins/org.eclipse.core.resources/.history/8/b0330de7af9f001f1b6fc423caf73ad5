package manager;

import java.util.ArrayList;
import java.util.List;

import jakarta.persistence.EntityManager;
import model.Predstava;
import model.Zanr;

public class PredstaveManager {

	public List<Predstava> predstavePoZanru(Zanr zanr) {
		EntityManager em = JPAUtils.getEntityManager();
		List<Predstava> predstave = new ArrayList<>();
		int id = zanr.getIdZanr();
		predstave = em.createNamedQuery("SELECT p FROM Predstava p JOIN predstavaZanr pz WHERE pz.idZanr =: x")
				.setParameter(0, id)
				.getResultList();
		return predstave;
	}
	
}
